{
  "compilerOptions": {
     "target": "ES2016",
     "module": "ESNext",
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "allowJs": true,
     "checkJs": true,
     "declaration": true,
     "outDir": "dist",
     "declarationDir": "types",
     "isolatedModules": false,
     "allowSyntheticDefaultImports": true,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": false,
     "skipLibCheck": true
  },
  "include": [
     "src/**/*.ts"
  ],
  "exclude": [
     "node_modules",
  ]
}
